{
  "manifest_version": 3,
  "name": "Website Restriction Alert",
  "version": "1.0",
  "description": "Alerts the user when they attempt to visit restricted websites.",
  "permissions": [
    "webRequest",  
    "webRequestBlocking", 
    "storage", 
    "activeTab" 
  ],
  "host_permissions": [
    "<all_urls>" 
  ],
  "background": {
    "service_worker": "background.js" 
  },
  "action": {
    "default_popup": "popup.html"
  }
}
